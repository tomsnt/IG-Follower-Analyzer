{
  "manifest_version": 3,
  "name": "Instagram Analyzer - Dual Mode",
  "version": "2.0.0",
  "description": "Scarica followers e following di Instagram con modalit√† dual-mode",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "alarms"
  ],
  "host_permissions": [
    "https://www.instagram.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Instagram Followers Scraper"
  },
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  }
}